<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Interactividad</title>
    <style>
        #padre{
            width:90%;
            height:400px;
        }
        #hijo{
            width:80%;
            height:80%;
        }
    </style>
  </head>
  <body>
      <div class="containter-fluid">
          <div class="row">
              <div class="col mx-3">
                <h1 class="text-primary">Lección 1</h1>
                <div class="border border-dark" id="padre">
                    <div class="border border-dark mx-auto mt-4" id="hijo" >
                        <div class="border border-dark mx-auto mt-4" id="hijo">
                            <div class="border border-dark mx-auto text-center mt-4" id="hijo">
                                <button id="button" class="btn btn-success mt-5" onclick="elegir(this)">Elegir</button>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
          </div>
      </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      <script>
        var elementoMemoria = '';
        var strVar="";
        strVar += " <p class=\"text-white display-5\"> Selecto<\/p>";

          function elegir(objetoHTML){
            console.log("ELEMENTO QUE DISPARA LA FUNCIÓN:");
            console.log(objetoHTML);
            console.log("PADRE INMEDIATO:");
            console.log(objetoHTML.parentElement);

            var padre=objetoHTML.parentElement;
           
            
           

         //   objetoHTML.parentElement.style.backgroundColor=" #00e68a"
         //   objetoHTML.parentElement.insertAdjacentHTML("afterbegin",strVar);
            
            loop(objetoHTML,elementoMemoria);
           
          }

          function loop(objBoton,div){
           //Como en un principio elementoMemoria se define pero sin valor, aparecerá como "undefined"
            if(div){
                
                    if( div.id!="padre"){
                        elementoMemoria=div.parentElement;
                        return elementoMemoria;
                    }
                    else{
                        elementoMemoria=objBoton.parentElement; 
                        return elementoMemoria;
                    }
            }
            else{
                elementoMemoria=objBoton.parentElement;
            }
            console.log("Elemento en Memoria:");
            console.log(elementoMemoria);
            elementoMemoria.style.backgroundColor="#00e68a";
            elementoMemoria.insertAdjacentHTML("afterbegin",strVar);  
            
          }
      </script>
